<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="all"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Your existing layout code goes here -->



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please Select the Lane legend below"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Types"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="4"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">
            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/Shoulder"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/im1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_shoulder"
                    android:foregroundGravity="center"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im1"
                    android:id="@+id/tx1"
                    android:gravity="center"
                    android:layout_marginTop="-6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:text="Shoulder"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:id="@+id/Hov"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/im2"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_hov"
                    android:foregroundGravity="center"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im2"
                    android:layout_marginTop="-6dp"
                    android:id="@+id/tx2"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginLeft="18dp"
                    android:text="Hov" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/Median"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/im3"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_median"
                    android:foregroundGravity="center"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im3"
                    android:id="@+id/tx3"
                    android:textColor="@color/black"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Median" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:id="@+id/Ramp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/im4"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_ramp"
                    android:foregroundGravity="center"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im4"
                    android:textColor="@color/black"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ramp"

                    android:id="@+id/tx4"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:id="@+id/Gore"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/im5"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_gore"
                    android:foregroundGravity="center"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im5"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Gore"
                    android:id="@+id/tx5"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>




        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="Statuses"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="4"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/Closed"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ima1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_closed"
                    tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima1"
                    android:id="@+id/txa1"
                    android:layout_marginTop="-6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Closed" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="15dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/Unknown"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ima2"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_unknown"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima2"
                    android:layout_marginTop="-6dp"
                    android:id="@+id/txa2"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="1dp"
                    android:text="Unknown" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:id="@+id/Rolling"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ima3"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_rolling"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima3"
                    android:textColor="@color/black"
                    android:id="@+id/txa3"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:text="Rolling" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:id="@+id/Blocked"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ima4"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_blocked"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima4"
                    android:layout_marginTop="-6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:text="Blocked"
                    android:id="@+id/txa4"
                    android:layout_marginLeft="3dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Alternating"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:padding="5dp"
                android:paddingBottom="10dp"
                tools:ignore="TextSizeCheck">

                <ImageButton
                    android:id="@+id/ima5"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_alternating"
                    tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/txa5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima5"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Alternating"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Intermittent"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:padding="5dp"
                android:paddingBottom="10dp"
                tools:ignore="TextSizeCheck">

                <ImageButton
                    android:id="@+id/ima6"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_intermittent"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/txa6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima6"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Intermittent"
                    android:textColor="@color/black" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:paddingBottom="0dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/Lanes_Affected"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ima7"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_lanes_affected"
                    tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/txa7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ima7"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="0dp"
                    android:text="Lanes  Affected"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>




        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center_horizontal">
            <!-- Save button -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="0dp"
                android:text="Cancel"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:text="Save"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

